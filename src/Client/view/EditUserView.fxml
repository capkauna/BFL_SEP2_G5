<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane style="-fx-background-color: #990000;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="Client.view.EditUserViewController">
    <children>
        <VBox spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
            <HBox>
                <Button onAction="#onBack" prefHeight="26.0" prefWidth="44.0" text="←" />
                <Label style="-fx-font-size: 18px; -fx-text-fill: white;" text="Edit user" />
            </HBox>

            <TextField fx:id="usernameField" promptText="Username" />
            <TextField fx:id="emailField" promptText="Email" />
            <TextField fx:id="nameField" promptText="Name" />
            <TextField fx:id="dobField" promptText="Date of Birth" />
            <TextField fx:id="phoneField" promptText="Phone number" />
            <TextField fx:id="addressField" promptText="Address" />
            <TextArea fx:id="moreInfoField" promptText="More info..." />
            <HBox spacing="10">
                <Button onAction="#onAddImage" text="Add image" />
                <TextField fx:id="newPasswordField" promptText="New Password" />
            </HBox>
            <TextField fx:id="currentPasswordField" alignment="CENTER" prefHeight="26.0" prefWidth="366.0" promptText="Current Password" />
            <Button onAction="#onSubmit" prefHeight="26.0" prefWidth="132.0" text="Submit" />
        </VBox>
    </children>
</AnchorPane>

<AnchorPane prefHeight="400" prefWidth="500" style="-fx-background-color: #a51414;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Client.view.BookInfoViewController">

    <Button fx:id="back" layoutX="10" layoutY="10" onAction="#onBackClicked" text="←" />
    <ImageView fx:id="bookImage" fitHeight="140" fitWidth="100" layoutX="36.0" layoutY="36.0" />

    <VBox layoutX="142.0" layoutY="14.0" prefHeight="174.0" prefWidth="344.0" spacing="5">
        <Label fx:id="titleLabel" text="Title" />
        <Label fx:id="authorLabel" text="Author" />
        <Label fx:id="genreLabel" text="Genre" />
        <Label fx:id="isbnLabel" text="ISBN" />
        <Label fx:id="ownerLabel" text="Owner" />
        <Label fx:id="borrowedLabel" text="Borrowed by" />
        <Label fx:id="languageLabel" text="Language" />
        <Label fx:id="yearLabel" text="Year" />
    </VBox>

    <CheckBox fx:id="unavailableCheckBox" layoutX="360" layoutY="50" text="mark unavailable" />
    <CheckBox fx:id="readCheckBox" layoutX="360" layoutY="80" text="read" />

    <Button fx:id="waitinglist" layoutX="50" layoutY="210" prefHeight="26.0" prefWidth="189.0" text="Waiting list" />
    <Button fx:id="history" layoutX="250" layoutY="210" prefHeight="26.0" prefWidth="196.0" text="History" />

    <TextArea fx:id="booknotes" editable="false" layoutX="50" layoutY="250" prefHeight="60" prefWidth="400" promptText="Notes from readers" />

    <Button fx:id="lendbutton" layoutX="190.0" layoutY="330.0" prefHeight="26.0" prefWidth="112.0" text="Lend" onAction="onLendButtonClicked" />
    <Button fx:id="addnote" layoutX="50.0" layoutY="330.0" prefHeight="26.0" prefWidth="112.0" text="Add note" onAction="onAddNoteButtonClicked" />
    <Button fx:id="returnbutton" layoutX="320" layoutY="330" prefHeight="26.0" prefWidth="126.0" text="Book was returned" />

</AnchorPane>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            style="-fx-background-color: #990000;"
            fx:controller="Client.view.UserListViewController">
    <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
        <HBox spacing="10">
            <Button text="←" onAction="#onBack"/>
            <Label text="Users"
                   style="-fx-font-size: 20px; -fx-text-fill: white;"/>
        </HBox>
        <TableView fx:id="userTable">
            <columns>
                <TableColumn fx:id="nameColumn" text="Name" prefWidth="200"/>
                <TableColumn fx:id="libraryColumn" text="Books in library"
                             prefWidth="200"/>
                <TableColumn fx:id="readColumn" text="Books read"
                             prefWidth="200"/>
            </columns>
        </TableView>
    </VBox>
</AnchorPane>






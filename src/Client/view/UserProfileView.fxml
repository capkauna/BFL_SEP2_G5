<AnchorPane prefHeight="400" prefWidth="600" style="-fx-background-color: #990000;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Client.view.UserProfileViewController">

    <!-- Back Arrow Button -->
    <Button fx:id="backButton" layoutX="10" layoutY="10" onAction="#onBack" style="-fx-background-color: transparent;">
    </Button>

    <!-- Page Title -->
    <Label fx:id="UserProfile" layoutX="51.0" layoutY="7.0" prefHeight="30.0" prefWidth="180.0" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" text="UserProfile" />

    <TextField fx:id="nameField" editable="false" layoutX="294.0" layoutY="53.0" prefHeight="26.0" prefWidth="195.0" promptText="Name" style="-fx-background-color: #D3D3D3;" />
    <TextField fx:id="phoneField" editable="false" layoutX="294.0" layoutY="93.0" prefHeight="26.0" prefWidth="195.0" promptText="Phone" style="-fx-background-color: #D3D3D3;" />
    <TextField fx:id="emailField" editable="false" layoutX="294.0" layoutY="127.0" prefHeight="26.0" prefWidth="195.0" promptText="Email" style="-fx-background-color: #D3D3D3;" />
    <TextField fx:id="addressField" editable="false" layoutX="294.0" layoutY="163.0" prefHeight="26.0" prefWidth="195.0" promptText="Address" style="-fx-background-color: #D3D3D3;" />

    <Button fx:id="settingsButton" layoutX="22.0" layoutY="10.0" onAction="#onEditUser" style="-fx-background-color: transparent;">
    </Button>

    <!-- Action Buttons -->
    <Button fx:id="readListButton" layoutX="80" layoutY="200" onAction="#onReadList" prefWidth="180" text="Read list" />
    <Button fx:id="lentBooksButton" layoutX="310" layoutY="200" onAction="#onLentBooks" prefWidth="180" text="Lent books list" />
    <Button fx:id="myLibraryButton" layoutX="80" layoutY="240" onAction="#onMyLibrary" prefHeight="30.0" prefWidth="180" text="My Library" />
    <Button fx:id="borrowedBooksButton" layoutX="310" layoutY="240" onAction="#onBorrowedBooks" prefWidth="180" text="Borrowed books list" />

    <!-- More Info Field -->
    <TextField fx:id="moreInfoField" editable="false" layoutX="30" layoutY="320" prefWidth="540" promptText="More info (calling times, out of town, etc)" style="-fx-background-color: #D3D3D3; -fx-font-weight: bold; -fx-alignment: CENTER;" />
    <Button fx:id="edit" layoutX="557.0" layoutY="9.0" mnemonicParsing="false" onAction="#onEditUser" prefHeight="26.0" prefWidth="26.0" text="⚙" textAlignment="CENTER" textFill="#b14747" textOverrun="WORD_ELLIPSIS" />
    <Button layoutX="10.0" layoutY="10.0" onAction="#onBack" text="←" />
   <ImageView fx:id="userAvatar" fitHeight="146.0" fitWidth="130.0" layoutX="105.0" layoutY="46.0" pickOnBounds="true" preserveRatio="true" />

</AnchorPane>

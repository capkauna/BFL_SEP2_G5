<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="320" prefWidth="480" style="-fx-background-color: #990000;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="Client.view.MyLibraryViewController">

    <Label fx:id="MyLibrary" layoutX="20" layoutY="20" style="-fx-text-fill: white; -fx-font-size: 16;" text="My Library" />

    <ListView fx:id="libraryList" layoutX="20" layoutY="50" prefHeight="180" prefWidth="440" />

    <Button fx:id="addBookButton" layoutX="20" layoutY="250" onAction="#onAddBookClicked" prefWidth="130" text="Add new book" />
    <Button fx:id="viewBookButton" layoutX="175" layoutY="250" onAction="#onViewBookClicked" prefWidth="130" text="View Book" />
    <Button fx:id="removeBookButton" layoutX="330" layoutY="250" onAction="#onRemoveBookClicked" prefWidth="130" text="Remove book" />

    <Button fx:id="back" layoutX="20" layoutY="290" onAction="#onBackClicked" prefWidth="80" text="← Back" />
</AnchorPane>

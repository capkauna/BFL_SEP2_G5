<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400" prefWidth="600" style="-fx-background-color: #990000;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Client.view.UserPageViewController">

    <!-- Back Arrow Button -->
    <Button fx:id="backButton" layoutX="10" layoutY="10" onAction="#onBack" style="-fx-background-color: transparent;">
    </Button>

    <!-- Page Title -->
    <Label layoutX="51.0" layoutY="7.0" prefHeight="18.0" prefWidth="89.0" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" text="UserPage" />


    <!-- User Avatar and Info Fields -->
    <ImageView fx:id="userAvatar" fitHeight="113.0" fitWidth="180.0" layoutX="30" layoutY="50" style="-fx-border-color: white; -fx-background-color: lightgray;" />
    <Label layoutX="77.0" layoutY="91.0" style="-fx-text-fill: white; -fx-font-weight: bold;" text="User avatar" />

    <TextField fx:id="nameField" editable="false" layoutX="244.0" layoutY="50.0" prefHeight="26.0" prefWidth="195.0" promptText="Name" style="-fx-background-color: #D3D3D3;" />
    <TextField fx:id="phoneField" editable="false" layoutX="244.0" layoutY="87.0" prefHeight="26.0" prefWidth="195.0" promptText="Phone" style="-fx-background-color: #D3D3D3;" />
    <TextField fx:id="emailField" editable="false" layoutX="244.0" layoutY="124.0" prefHeight="26.0" prefWidth="195.0" promptText="Email" style="-fx-background-color: #D3D3D3;" />
    <TextField fx:id="addressField" editable="false" layoutX="244.0" layoutY="160.0" prefHeight="26.0" prefWidth="195.0" promptText="Address" style="-fx-background-color: #D3D3D3;" />

    <Button fx:id="settingsButton" layoutX="22.0" layoutY="10.0" onAction="#onEditUser" style="-fx-background-color: transparent;">
    </Button>

    <!-- Action Buttons -->
    <Button fx:id="readListButton" layoutX="80" layoutY="200" onAction="#onReadList" prefWidth="180" text="Read list" />
    <Button fx:id="lentBooksButton" layoutX="310" layoutY="200" onAction="#onLentBooks" prefWidth="180" text="Lent books list" />
    <Button fx:id="myLibraryButton" layoutX="80" layoutY="240" onAction="#onMyLibrary" prefHeight="30.0" prefWidth="180" text="My Library" />
    <Button fx:id="borrowedBooksButton" layoutX="310" layoutY="240" onAction="#onBorrowedBooks" prefWidth="180" text="Borrowed books list" />

    <!-- More Info Field -->
    <TextField fx:id="moreInfoField" editable="false" layoutX="30" layoutY="320" prefWidth="540" promptText="More info (calling times, out of town, etc)" style="-fx-background-color: #D3D3D3; -fx-font-weight: bold; -fx-alignment: CENTER;" />
    <ButtonBar layoutX="370.0" layoutY="67.0" prefHeight="40.0" prefWidth="200.0" />
    <Button layoutX="532.0" layoutY="10.0" mnemonicParsing="false" text="⚙️" textAlignment="CENTER" textFill="#b14747" textOverrun="WORD_ELLIPSIS">
        <font>
            <Font size="24.0" />
        </font>
    </Button>
    <Button layoutX="10.0" layoutY="10.0" onAction="#onBack" text="←" />

</AnchorPane>








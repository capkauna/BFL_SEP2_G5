<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="Client.view.WaitingListViewController">

    <top>
        <Label text="Waiting List" style="-fx-font-size: 20px; -fx-padding: 10;" BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <TableView fx:id="waitingListTable" prefWidth="500" prefHeight="250">
            <columns>
                <TableColumn fx:id="entryIdColumn" text="Entry # in List" prefWidth="150" />
                <TableColumn fx:id="userIdColumn" text="User ID" prefWidth="120" />
                <TableColumn fx:id="addedAtColumn" text="Added At" prefWidth="200" />
            </columns>
        </TableView>
    </center>


    <bottom>
        <HBox spacing="10" alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button fx:id="addToListButton" text="Add Me to Waiting List" onAction="#onAddToListClicked" />
            <Button fx:id="lendButton" text="Lend to Selected User" onAction="#onLendClicked" />
            <Button fx:id="closeButton" text="Close" onAction="#onCloseClicked" />
        </HBox>
    </bottom>
</BorderPane>